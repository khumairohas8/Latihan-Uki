<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:id="@+id/todoitem"
    android:layout_marginBottom="5dp"
    android:background="@color/white"
    android:layout_height="90dp">

    <LinearLayout
        android:layout_width="220dp"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#2547ff"
            android:id="@+id/titletodo"
            android:text="Pergi Mancing"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/desctodo"
            android:textColor="#adadad"
            android:layout_marginTop="8dp"
            android:text="Memancing bersama di rumah pj"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff2525"
            android:text="11-01-2022"
            android:id="@+id/datetodo"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="12sp"
            />
    </LinearLayout>

</LinearLayout>